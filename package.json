{
  "name": "doom-design-system",
  "version": "0.1.15",
  "description": "Neubrutalist and comic book inspired design system",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && tsc && sass components:dist/components styles:dist/styles --no-source-map && node scripts/fix-imports.cjs",
    "verify": "npm run validate:build && npm run lint:package && npm run test:integration",
    "prepack": "npm run build && npm run verify",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build -o storybook-static",
    "deploy-build": "rimraf build && mkdir -p build && cp website/index.html website/doom.png build/ && storybook build -o build/storybook",
    "test": "vitest",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "lint:package": "publint",
    "validate:build": "node scripts/validate-build.cjs"
  },
  "keywords": [
    "design-system",
    "react",
    "ui-kit",
    "components"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "lucide-react": "^0.555.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^10.1.4",
    "@storybook/addon-docs": "^10.1.4",
    "@storybook/nextjs": "^10.1.4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.2",
    "@types/styled-jsx": "^2.2.9",
    "@vitest/mocker": "^4.0.15",
    "copyfiles": "^2.4.1",
    "eslint-plugin-storybook": "^10.1.4",
    "glob": "^13.0.0",
    "happy-dom": "^20.0.11",
    "next": "^15.5.7",
    "publint": "^0.3.16",
    "replace-in-file": "^8.4.0",
    "rimraf": "^6.1.2",
    "sass": "^1.96.0",
    "storybook": "^10.1.10",
    "styled-jsx": "^5.1.7",
    "tsc-alias": "^1.8.16",
    "typescript": "^5",
    "vite": "^7.2.7",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "@tanstack/react-table": "^8.21.3",
    "@tanstack/react-virtual": "^3.13.12",
    "clsx": "^2.1.1"
  }
}
